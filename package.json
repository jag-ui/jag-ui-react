{
  "name": "jag-ui-react",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "packages/**/webpack-dev-server",
      "apps/**/webpack-dev-server",
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "scripts": {
    "start": "yarn start:testapp",
    "start:testapp": "yarn workspace jag-ui-react-testapp start",
    "watch:core": "yarn workspace @jag-ui-react/core watch",
    "watch:components": "yarn workspace @jag-ui-react/components watch",
    "watch:form": "yarn workspace @jag-ui-react/form watch",
    "watch:icons": "yarn workspace @jag-ui-react/icons watch",
    "test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage",
    "deploy": "FORCE_COLOR=true lerna run deploy",
    "release-new-version": "FORCE_COLOR=true lerna version --conventional-commits --yes",
    "release": "FORCE_COLOR=true lerna publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-eslint": "10.0.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.6",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "microbundle": "^0.12.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/setupTests.{js,jsx,ts,tsx}",
      "!src/index.{js,jsx,ts,tsx}",
      "!src/serviceWorker.{js,jsx,ts,tsx}",
      "!src/**/*.(spec|test|stories).{js,jsx,ts,tsx}"
    ]
  }
}
